#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/ts-node" ]; then
  exec "$basedir/ts-node"  "$basedir/../@zondax/ledger-substrate/dist/cmd/cli.js" "$@"
else 
  exec ts-node  "$basedir/../@zondax/ledger-substrate/dist/cmd/cli.js" "$@"
fi
